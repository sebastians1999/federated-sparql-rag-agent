
# Natural Language Question
# =======================
Search for Chemical names starting in Japanese, translated to english using allie

# Target Endpoint
# ===============
https://sparql.rhea-db.org/sparql/

# Ground Truth Query
# =================
PREFIX oboInOwl: <http://www.geneontology.org/formats/oboInOwl#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT
*
WHERE {
SERVICE <https://data.allie.dbcls.jp/sparql>{
        ?x rdfs:label "1,2,4-トリクロロベンゼン"@ja ;
            rdfs:label ?englishLabel .
        FILTER(lang(?englishLabel) = "en")
    }
  BIND(STR(?englishLabel) AS ?englishLabelStr)
  ?chebi rdfs:label|oboInOwl:hasSynonym ?englishLabelStr .
}

# Predicted Query
# ==============
# https://sparql.rhea-db.org/sparql
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX chebi: <http://purl.obolibrary.org/obo/CHEBI_>

SELECT DISTINCT ?chebiName
WHERE {
  # Use Rhea DB as the primary endpoint and federate with ChEBI
  SERVICE <https://sparql.rhea-db.org/sparql> {
    # Find reactions involving chemical entities
    ?reaction rdfs:label ?reactionLabel .
    ?reaction rhea:equation ?equation .

    # Extract ChEBI identifiers from the reaction equation
    FILTER CONTAINS(?equation, "CHEBI:")
    BIND(SUBSTR(STR(?equation), STRLEN(?equation) - (STRLEN(?equation) - (STRLEN(STRBEFORE(?equation, "CHEBI:")) + 6))), ?chebiID)

    # Construct the full ChEBI URI
    BIND(IRI(CONCAT("http://purl.obolibrary.org/obo/CHEBI_", ?chebiID)) AS ?chebiURI)

    # Filter for reactions involving chemical entities with names starting with "Japanese"
    SERVICE <https://sparql.uniprot.org/sparql> {
      ?chebiURI rdfs:label ?chebiName .
      FILTER STRSTARTS(LCASE(?chebiName), "japanese")
    }
  }
}
