
# Natural Language Question
# =======================
Distribution of reactions according to the first level of enzyme classification

# Target Endpoint
# ===============
https://sparql.rhea-db.org/sparql

# Ground Truth Query
# =================

PREFIX rh:<http://rdf.rhea-db.org/>
PREFIX ec:<http://purl.uniprot.org/enzyme/>
PREFIX rdfs:<http://www.w3.org/2000/01/rdf-schema#>
PREFIX skos:<http://www.w3.org/2004/02/skos/core#>

SELECT
  ?ecClass
  (str(?ecName) as ?ecClassName)
  (count(?reaction) as ?reactionCount)
WHERE
{
  SERVICE <http://sparql.uniprot.org/sparql> {
    VALUES (?ecClass) { (ec:1.-.-.-)(ec:2.-.-.-)(ec:3.-.-.-)(ec:4.-.-.-)(ec:5.-.-.-) (ec:6.-.-.-) (ec:7.-.-.-) }
    ?ecNumber rdfs:subClassOf ?ecClass .
    ?ecClass skos:prefLabel ?ecName .
  }
  ?reaction rdfs:subClassOf rh:Reaction .
  ?reaction rh:ec ?ecNumber .
}
GROUP BY ?ecClass ?ecName


# Predicted Query
# ==============
# https://sparql.rhea-db.org/sparql
PREFIX rhea: <http://rdf.rhea-db.org/>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT ?firstLevelEC (COUNT(DISTINCT ?reaction) AS ?numReactions)
WHERE {
  # Get reactions from Rhea
  SERVICE <https://sparql.rhea-db.org/sparql> {
    ?reaction rdf:type rhea:Reaction .
  }

  # Attempt to link to UniProt to get EC numbers.  This is an assumption, as Rhea may not directly link.
  # We use a SERVICE clause with OPTIONAL to handle cases where there's no link.
  OPTIONAL {
    SERVICE <https://sparql.uniprot.org/sparql> {
      ?uniprotEntry rdfs:seeAlso ?reaction . # Assuming rdfs:seeAlso links to Rhea.  This might need adjustment.
      ?uniprotEntry <http://purl.uniprot.org/core/enzyme> ?enzymeActivity . # Assuming this property links to enzyme activity.
      ?enzymeActivity <http://purl.uniprot.org/core/ecNumber> ?ecNumber . # Assuming this property holds the EC number.
      BIND(SUBSTR(STR(?ecNumber), 1, 1) AS ?firstLevelEC) # Extract the first digit.
    }
  }
  
  # If no EC number is found, assign "Unclassified"
  BIND(IF(!BOUND(?firstLevelEC), "Unclassified", ?firstLevelEC) AS ?firstLevelEC)
}
GROUP BY ?firstLevelEC
ORDER BY ?firstLevelEC
